<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="linkvalue.oauth2.client" class="Linkvalue\Oauth2Bundle\LinkvalueClient">
            <argument key="$client" type="service" id="http_client"/>
        </service>
        <service id="linkvalue.oauth2.provider" class="Linkvalue\Oauth2Bundle\LinkvalueClient">
            <argument key="$linkvalueClient" type="service" id="linkvalue.oauth2.client"/>
            <argument></argument> <!-- will be filled in with client_iddynamically -->
            <argument></argument> <!-- will be filled in with client_secret dynamically -->
            <argument></argument> <!-- will be filled in with redirect_uri dynamically -->
            <argument></argument> <!-- will be filled in with scopes dynamically -->
        </service>
    </services>
</container>